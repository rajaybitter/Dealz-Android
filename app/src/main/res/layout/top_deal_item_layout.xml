<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/top_deals_item_width"
    android:layout_height="@dimen/top_deals_item_width"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/top_deals_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_deals_image_height"
            android:scaleType="fitCenter"
            android:id="@+id/top_deals_image"
            android:src="@drawable/test_image"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_deals_name"
            tools:text="This is the item Name"
            android:textColor="@color/primary_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/top_deal_name_text_size"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
