<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/top_deals_item_margin"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_weight="0.07"
        android:padding="@dimen/top_deals_item_margin">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_item_image"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_image" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/search_item_image"
            android:layout_toRightOf="@+id/search_item_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            tools:text="This is the text name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/search_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/search_item_image"
            android:layout_toRightOf="@+id/search_item_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/primary_text"
            tools:text="This is the item description" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/search_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_item_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:layout_marginLeft="11dp"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            tools:text="Price" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/search_item_description"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/divider" />

    </RelativeLayout>
</LinearLayout>
